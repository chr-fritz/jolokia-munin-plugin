<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/IntegrationTests.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="de.chrfritz.jolokiamunin" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
